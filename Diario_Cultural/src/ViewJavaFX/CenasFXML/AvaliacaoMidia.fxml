<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="400.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ViewJavaFX.AvaliacaoMidias.AvaliacaoMidiaController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label fx:id="tituloMidiaLabel" text="Avaliando: [Nome da Mídia]">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <Label text="Nota (1 a 5):" />
        <ChoiceBox fx:id="notaChoiceBox" prefWidth="150.0" />
        <Label fx:id="temporadaLabel" text="Temporada:" visible="false" />
        <ChoiceBox fx:id="temporadaChoiceBox" prefWidth="150.0" visible="false" />
        <Label text="Data em que consumiu:" />
        <DatePicker fx:id="dataConsumoPicker" />
        <Label text="Sua resenha:" />
        <TextArea fx:id="comentarioTextArea" prefHeight="150.0" wrapText="true" />
        <Button fx:id="salvarButton" mnemonicParsing="false" onAction="#salvarAvaliacao" text="Salvar Avaliação" />
        <Button fx:id="cancelarButton" mnemonicParsing="false" onAction="#cancelar" text="Cancelar" />
    </children>
</VBox>